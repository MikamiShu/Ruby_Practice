<h1>Test</h1>

<div class="center">
     <%= link_to "新しい投稿", new_user_path, class: "link-button"%>
</div>

<ul>
    <% @users.each do |user| %>
        <li>
            <h2><%= user.text_content%></h2>
            <p><%= user.sort_word%></p>
            <span>
                <small><%= user.created_at %></small>       
            </span>
            <div class="button_test">
                <%= button_to "削除", user_path(user), method: :delete %>
            </div>
        </li>
    <%end%>
</ul>

