<h1>Test</h1>

<%= form_with model: @user do |form| %> 
    <div>
        <%= form.label :search_word %>
        <%= form.text_field :search_word, value: @search_params[:search_word] %>
    </div>
    <%= button_to "検索", user_path(form)%>
    <%= link_to "新しい投稿", new_user_path%>
<% end %>

<ul>
    <% @users.each do |user| %>
        <li>
            <h2><%= user.text_content%></h2>
            <p><%= user.sort_word%></p>
            <span>
                <small><%= user.created_at %></small>       
            </span>
            <div class="button_test">
                <%= button_to "削除", user_path(user), method: :delete %>
            </div>
        </li>
    <%end%>
</ul>

